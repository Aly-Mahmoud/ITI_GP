// Configure PWM parameters
#define PWM_FREQUENCY   10000    // PWM frequency in Hz
#define PWM_MAX_DUTY    100      // Maximum PWM duty cycle (0-100%)

enum{
	CAR_FORWARD,
	CAR_BACKWARD,
	CAR_STOP
};

enum{
	BACK,
	one,
	two,
	three,
	four,
}Clutch_Values;

typedef struct {
